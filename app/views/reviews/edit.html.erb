
<div id="new_review">

    <%= form_for @review do |review_form| %>
    <%= review_form.label 'Department for Review:', :class => :field_label %> <%= review_form.text_field :dept, :placeholder => 'History, Sociology...', :class => :field_entry %><br>
    
    <fieldset class="review_fieldset">
        <legend class="legend">Study Abroad Program Information</legend>
        <%= review_form.label 'Program sponsor:', :class => :field_label %><%= review_form.text_field :program_sponsor, :class => :field_entry %>
        <%= review_form.label 'Program name:', :class => :field_label %><%= review_form.text_field :program_name, :class => :field_entry %>
        <%= review_form.label 'Program term:', :class => :field_label %><%= review_form.text_field :program_term, :class => :field_entry %>
        
        <br>

        <div id="get_university">
            <%= select_tag(:university_id, options_for_select(@universities, selected: @review.university.id)) %>
            <%= link_to "Add university...", '#', :id => :add_university_link %><br>
        </div>

        <div id="add_university">
            <%= fields_for :university, University.new do |uni_form| %>
            <%= uni_form.label 'University name:', :class => :field_label %><%= uni_form.text_field :name, :class => :field_entry %>
            <%= uni_form.label 'University city:', :class => :field_label %><%= uni_form.text_field :city, :class => :field_entry %>
            <%= uni_form.label 'University country:', :class => :field_label %><%= uni_form.text_field :country, :class => :field_entry %><br>
            <% end %>
        </div>
    </fieldset>
    
    <fieldset class="review_fieldset">
        <legend class="legend">Foreign Course Information</legend>
    
        <%= review_form.fields_for @review.course do |course_form| %>
    
        <%= course_form.label 'Course name:', :class => :field_label %><%= course_form.text_field :name, :class => :field_entry %>
        <%= course_form.label 'Course code:', :class => :field_label %><%= course_form.text_field :code, :class => :field_entry %><br><br>
        <%= course_form.label 'Language of Instruction:', :class => :field_label %><%= course_form.text_field :language, :class => :field_entry %>
        <br>
    
    
        <% end %>
    </fieldset>
    
    <fieldset class="review_fieldset">
        <legend class="legend">Status</legend>
        <%= review_form.text_area :note %>
        
        <%= review_form.radio_button(:status, "pending") %>
        <%= review_form.label(:status_pending, "Pending") %><br>
        <%= review_form.radio_button(:status, "sent") %>
        <%= review_form.label(:status_sent, "Sent") %><br>
        <%= review_form.radio_button(:status, "resent") %>
        <%= review_form.label(:status_pending, "Re-sent") %><br>
        <%= review_form.radio_button(:status, "approved") %>
        <%= review_form.label(:status_sent, "Approved") %>
        
    </fieldset>
    
    <%= review_form.submit :'Submit Review', :id => :submit_review%>
    
    <% end %>

</div>

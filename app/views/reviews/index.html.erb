<div id="reviews_nav_bar">
    <%= link_to 'Pending', reviews_path(:status => :pending), :class => "reviews_nav_tab" %>
    <%= link_to 'Sent', reviews_path(:status => :sent), :class => "reviews_nav_tab" %>
    <%= link_to 'Approved', reviews_path(:status => :approved), :class => "reviews_nav_tab" %>
</div>

<div id="reviews_box">

<div id="page_links">
<% if @reviews.count > 0 %>

<% if @p > 9 %>
<%= link_to 'Previous', reviews_path(:status => params[:status], :p => @p - 10), :id => :prev_link %>
<% end %>

<% if @p + 10 < @p_max %>
<%= link_to 'Next', reviews_path(:status => params[:status], :p => @p + 10), :id => :next_link %>
<% end %>
</div>

<% @reviews.each do |review| %>

<div class="review_message" id="review.<%= review.id %>" >
    <b><%= (review.course.code || '') + ' ' + review.course.name %></b><br>
    <%= (review.university.name || 'no university') + ' (' + (review.university.city || '') + ', ' + (review.university.country || '') + ')' %>
    <div class="review_info_box">
        Date submitted: <%= review.created_at %><br>
        Status: <b><%= review.status.titleize %></b><br>
        
        <% if review.status == 'approved' %>
            
            Equivalent: <b><%= review.umd_course.designator + ' ' + review.umd_course.code + ': ' + review.umd_course.name %></b><br>
        
        <% end %>
        
    </div>
</div>

<% end %>

<% else %>

<div class="review_message" style="text-align: center">

Nothing to see here!

</div>

<% end %>

</div>
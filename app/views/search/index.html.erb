<div class="col-md-8 col-md-offset-2">
<br>
    <form role="form" action="<%= search_path %>" method="get">
        <div class="form-group">
            <%= label_tag :course, "I'm looking for a course..." %>
            <%= text_field_tag :course, params[:course], :class => 'form-control', :placeholder => "biology, sociology, Oxford, China..." %>
        </div>
        
        <div class="text-center">
            <%= submit_tag "Search!", :name => nil, :class => "btn btn-default" %>
        </div>
    </form>

</div>

<% if params[:course] != nil && params[:course] != '' %>

<div class="col-md-8 col-md-offset-2">
    
    <% if @results.count > 0 %>
    
    <h2>Results</h2>
    
    <hr>

    <%= render @results %>

    <div class="text-center">
        <%= will_paginate @results, renderer: BootstrapPagination::Rails %>
    </div>
    
    <% else %>
    
    <div class="text-center"><h2>Nothing turned up!</h2></div>
    
    <% end %>
    
</div>

<% end %>

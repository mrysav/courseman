<div class="col-md-8 col-md-offset-2">

    <form role="form" action="<%= search_path %>" method="get" >
        <div class="form-group">
            <%= label_tag :course, "I'm looking for a course..." %>
            <%= text_field_tag :course, params[:course], :class => 'form-control', :placeholder => "biology, university of worcester, Social Sciences..." %>
        </div>
        
        <div class="text-center">
            <%= submit_tag "Search!", :name => nil %>
        </div>
    </form>

</div>

<% if params[:course] != nil && params[:course] != '' %>

<div class="col-md-8 col-md-offset-2">
    
    <% if @courses.count > 0 %>
    
    <h2>Results</h2>
    
    <nav>
        <ul class="pager">

            <% if @p > 0 %>
            <li class="previous"><a href="<%= search_path(:course => params[:course], :p => @p - 10) %>"><span aria-hidden="true">&larr;</span> Previous</a></li>
            <% end %>

            <% if @p + 10 < @p_max %>
            <li class="next"><a href="<%= search_path(:course => params[:course], :p => @p + 10) %>">Next <span aria-hidden="true">&rarr;</span></a></li>
            <% end %>

        </ul>
    </nav>
    
    <hr>

    <%= render @courses %>
    
    <nav>
        <ul class="pager">

            <% if @p > 0 %>
            <li class="previous"><a href="<%= search_path(:course => params[:course], :p => @p - 10) %>"><span aria-hidden="true">&larr;</span> Previous</a></li>
            <% end %>

            <% if @p + 10 < @p_max %>
            <li class="next"><a href="<%= search_path(:course => params[:course], :p => @p + 10) %>">Next <span aria-hidden="true">&rarr;</span></a></li>
            <% end %>

        </ul>
    </nav>
    
    <% else %>
    
    <div class="text-center"><h2>Nothing turned up!</h2></div>
    
    <% end %>
    
</div>

<% end %>
<%= image_tag @user.image, :class => 'img-responsive col-md-2', :style => "width: 100px" %>
<div class="col-md-3">
    <b><%= @user.name %></b><br>
    Email: <a href="mailto:<%= @user.email %>"><%= @user.email %></a><br>
    <br>
</div>
    
<%= form_for @user, :html => { :class => "form-horizontal col-md-5", :role => :form }, method: :put, url: profile_path do |f|  %>

<div class="form-group">
    <label for="umdid" class="col-sm-4 control-label">Student ID</label>
    <div class="col-sm-8"><%= f.text_field :student_id, :class => "form-control" %></div>
</div>
<div class="form-group">
    <label for"collegiate_unit" class="col-sm-4 control-label">College</label>
    <div class="col-sm-8"><%= f.text_field :collegiate_unit, :class => "form-control" %></div>
</div>
<div class="form-group">
    <label for"major" class="col-sm-4 control-label">Major</label>
    <div class="col-sm-8"><%= f.text_field :major, :class => "form-control" %></div>
</div>
<div class="form-group">
    <label for"minor" class="col-sm-4 control-label">Minor</label>
    <div class="col-sm-8"><%= f.text_field :minor, :class => "form-control" %></div>
</div>

<div class="text-center">
    <%= f.submit 'Update profile', :class => "btn btn-default" %>
</div>
            
<% end %>